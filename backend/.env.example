# SkillMatch AI Backend Configuration

# Database
DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/skillmatch_ai
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# JWT Authentication
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# DigitalOcean Spaces Configuration
DO_SPACES_ACCESS_KEY=your_digitalocean_spaces_access_key
DO_SPACES_SECRET_KEY=your_digitalocean_spaces_secret_key
DO_SPACES_BUCKET_NAME=your-skillmatch-bucket
DO_SPACES_REGION=nyc3
DO_SPACES_ENDPOINT=https://nyc3.digitaloceanspaces.com
DO_SPACES_CDN_ENDPOINT=https://your-bucket.nyc3.cdn.digitaloceanspaces.com

# File Upload Settings
MAX_FILE_SIZE_MB=25
ALLOWED_FILE_TYPES=pdf,docx,doc,txt
UPLOAD_FOLDER=resumes

# Redis Configuration (for caching and background tasks)
REDIS_URL=redis://localhost:6379/0

# AI/ML Configuration
OPENAI_API_KEY=your_openai_api_key
SENTENCE_TRANSFORMER_MODEL=all-MiniLM-L6-v2

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@skillmatch.ai

# Application Settings
APP_NAME=SkillMatch AI
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://yourdomain.com

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Monitoring
SENTRY_DSN=your_sentry_dsn_if_using_sentry

# Security
BCRYPT_ROUNDS=12
SECURE_COOKIES=False  # Set to True in production with HTTPS
